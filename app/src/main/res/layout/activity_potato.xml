<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.mjvrijn.matthewvanrijn_pset1.PotatoActivity"
    android:background="#e3e3e3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:id="@+id/title_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/potato_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_view"
        android:layout_above="@+id/checkboxes_title_view"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_body"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/body"
            android:contentDescription="@string/potato_body" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_arms"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/arms"
            android:contentDescription="@string/potato_arms" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_ears"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ears"
            android:contentDescription="@string/potato_ears" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_eyebrows"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/eyebrows"
            android:contentDescription="@string/potato_eyebrows" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_eyes"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/eyes"
            android:contentDescription="@string/potato_eyes" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_glasses"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/glasses"
            android:contentDescription="@string/potato_glasses" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_hat"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/hat"
            android:contentDescription="@string/potato_hat" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_mouth"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mouth"
            android:contentDescription="@string/potato_mouth" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_mustache"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mustache"
            android:contentDescription="@string/potato_mustache" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_nose"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/nose"
            android:contentDescription="@string/potato_nose" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/potato_shoes"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shoes"
            android:contentDescription="@string/potato_shoes" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/checkboxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <CheckBox
                android:text="@string/potato_arms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_arms"
                android:onClick="toggleImage"/>

            <CheckBox
                android:text="@string/potato_ears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_ears"
                android:onClick="toggleImage"/>

            <CheckBox
                android:text="@string/potato_eyebrows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_eyebrows"
                android:onClick="toggleImage"/>

            <CheckBox
                android:text="@string/potato_eyes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_eyes"
                android:onClick="toggleImage"/>

            <CheckBox
                android:text="@string/potato_glasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_glasses"
                android:onClick="toggleImage"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <CheckBox
                android:text="@string/potato_hat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_hat"
                android:onClick="toggleImage"/>

            <CheckBox
                android:text="@string/potato_mouth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_mouth"
                android:onClick="toggleImage"/>

            <CheckBox
                android:text="@string/potato_mustache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_mustache"
                android:onClick="toggleImage"/>

            <CheckBox
                android:text="@string/potato_nose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_nose"
                android:onClick="toggleImage"/>

            <CheckBox
                android:text="@string/potato_shoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_shoes"
                android:onClick="toggleImage"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_title"
        android:id="@+id/checkboxes_title_view"
        android:layout_above="@id/checkboxes"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

</RelativeLayout>
